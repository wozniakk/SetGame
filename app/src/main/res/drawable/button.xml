<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="@color/button_material_dark" />
            <stroke
                android:width="2dp"
                android:color="@color/background_material_light" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_selected="false" >
        <shape>
            <solid
                android:color="@color/button_material_light" />
            <stroke
                android:width="2dp"
                android:color="@color/background_material_light" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
